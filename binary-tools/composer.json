{
    "name": "kduma/binary-tools",
    "type": "library",
    "description": "PHP library for binary data manipulation and encoding/decoding tools",
    "autoload": {
        "psr-4": {
            "KDuma\\BinaryTools\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KDuma\\BinaryTools\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "kduma",
            "email": "kduma@users.noreply.github.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "ext-mbstring": "*",
        "ext-hash": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "laravel/pint": "^1.18"
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "lint": "pint --test",
        "fix": "pint"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
