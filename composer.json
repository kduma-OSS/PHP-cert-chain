{
    "name": "kduma/cert-chain",
    "type": "library",
    "description": "PHP implementation for certificate chain of trust with validation and parsing",
    "autoload": {
        "psr-4": {
            "KDuma\\CertificateChainOfTrust\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KDuma\\CertificateChainOfTrust\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "kduma",
            "email": "kduma@users.noreply.github.com"
        }
    ],
    "require": {
        "php": "^8.4",
      "ext-mbstring": "*",
      "ext-hash": "*",
      "ext-sodium": "*",
      "paragonie/sodium_compat": "^1.19"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
