{
    "name": "kduma/cert-chain",
    "type": "library",
    "description": "PHP implementation for certificate chain of trust with validation and parsing",
    "homepage": "https://opensource.duma.sh/libraries/php/cert-chain",
    "autoload": {
        "psr-4": {
            "KDuma\\CertificateChainOfTrust\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KDuma\\CertificateChainOfTrust\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "kduma",
            "email": "kduma@users.noreply.github.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "ext-hash": "*",
        "ext-mbstring": "*",
        "ext-sodium": "*",
        "kduma/binary-tools": "^0.0.1",
        "paragonie/sodium_compat": "^1.19"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "laravel/pint": "^1.18"
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "lint": "pint --test",
        "fix": "pint"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "license": "MIT"
}
